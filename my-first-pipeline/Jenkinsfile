





 pipeline {
     agent {
      docker { image 'node:18-alpine' }
      args '-u root'
    
 }
   
  
  stages {
     stage('Test') {
       steps {
         sh 'apk update'
         sh 'apk add docker'
         sh 'docker pull pavanshekar/aws_nod_application:aws_nod_application'
         sh 'docker run -p 3000:3000 pavanshekar/aws_nod_application'
         
       }
    }
   }
 }
 
